<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Refine_Sugar</defName>
    <label>refine sugar</label>
    <description>Crush and boil raw sugar cane to produce refined sugar.</description>
    <jobString>Refining sugar.</jobString>
    <workAmount>300</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SugarCane</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <products>
      <SugarRefined>15</SugarRefined>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SugarCane</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>SugarCane</li>
      </thingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>FormKworn</defName>
    <label>form kworn</label>
    <description>Treat and form raw mycoprotein into an edible meat substitute.</description>
    <jobString>Forming kworn.</jobString>
    <workAmount>300</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Mycoprotein</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <products>
      <Kworn>40</Kworn>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Mycoprotein</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Mycoprotein</li>
      </thingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

</Defs>